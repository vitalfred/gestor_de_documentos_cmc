<link rel="stylesheet" href="/css/styles.css">
<h2>Reporte de Progreso de Usuarios</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Progreso</th>
      <th>Acci√≥n</th>
    </tr>
  </thead>
  <tbody>
    <% progressList.forEach(item => { %>
      <tr>
        <td><%= item.user.name %></td>
        <td><%= item.user.email %></td>
        <td>
          <%= item.uploadedCount %> de <%= item.totalRequired %> documentos subidos (<%= item.progress %>%)
          <% if(item.progress < 100) { %>
             <span class="badge badge-danger">Faltan documentos</span>
          <% } else { %>
             <span class="badge badge-success">Completo</span>
          <% } %>
        </td>
        <td>
          <a href="/admin/progress/<%= item.user.id %>" class="btn btn-sm btn-info">Ver Detalle</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
